{
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    "debug.showInStatusBar": "always",
    "workbench.statusBar.feedback.visible": false,
    "window.menuBarVisibility": "default",
    "files.defaultLanguage": "html",
    "editor.fontSize": 14,
    "liveServer.settings.donotShowInfoMsg": true,
    "workbench.activityBar.visible": false,
    "editor.wordWrap": "on",
    "editor.mouseWheelZoom": true,
    "explorer.confirmDragAndDrop": false,
    "editor.insertSpaces": false,
    "editor.smoothScrolling": true,
    "explorer.confirmDelete": false,
    "highlight-matching-tag.highlightSelfClosing": true,
    "highlight-matching-tag.highlightFromContent": true,
    "indenticator.inner.color.dark": "#c23333",
    "indenticator.inner.hover.peekForward": 3,
    "indenticator.inner.hover.trimLinesShorterThan": 3,
    "indenticator.inner.hover.peekBack": 2,
    "indenticator.inner.showHighlight": true,
    "indenticator.hover.peekForward": 2,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.rightClickBehavior": "default",
    "editor.suggestSelection": "first",

    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "[json]": {},
    "editor.fontFamily": "'Fira Code',Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "update.mode": "manual",
    "editor.glyphMargin": false,
    "workbench.iconTheme": "vscode-icons",
    "search.location": "panel",
    "workbench.editor.tabSizing": "shrink",
    "window.title": "${folderName}",
    "editor.selectionHighlight": true,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.js.map": true,          // Скрывать .map -файлы (для отладки)
        "**/*.js": {
            "when": "$(basename).ts"  // Скрывать JS  файлы, если базовое имя файда такое-же, как и  TS -файла
        }
    },
    "workbench.startupEditor": "none",
    "workbench.statusBar.visible": true,
    "explorer.incrementalNaming": "smart",
    "explorer.autoReveal": false,
    "terminal.integrated.rendererType": "dom",
    "editor.minimap.maxColumn": 100,
    "workbench.colorTheme": "BirdsofParadise",
    "editor.minimap.enabled": false,
    "liveServer.settings.donotVerifyTags": true,
    "workbench.tree.indent": 10,
    "workbench.tree.renderIndentGuides": "always",
    "update.enableWindowsBackgroundUpdates": false,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "http.systemCertificates": false,
    "editor.tabCompletion": "on",
    "javascript.updateImportsOnFileMove.enabled": "never",
}