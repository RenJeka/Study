<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head'); %>
    <title>App</title>
  </head>
  <body>
    <main class="container">
      <header>
        <h1>ToDo List</h1>
      </header>
      <table role="grid">
        <thead>
          <tr>
            <th class="edit-column"></th>
            <th>Name</th>
            <th>Description</th>
            <th>Completed</th>
          </tr>
        </thead>
        <tbody>

        <% data.forEach((item) => { %>
          <tr>
            <td class="edit-column edit-cell">
              <button id="edit_btn" class="table-btn table-btn_edit" data-item-id="<%= item.id %>">edit</button>
              <button id="remove_btn" class="table-btn table-btn_remove" data-item-id="<%= item.id %>">remove</button>
            </td>
            <td>
              <%= item.name %>
            </td>
            <td><%= item.description %></td>
            <td><%- item.completed ? 'yes' : 'no' %> </td>
          </tr>
        <% }); %>

        </tbody>
      </table>
      <div class="container">
        <%- buttons ?  ' <a href="add" role="button">Add item!</a> \
					     <a href="/" role="button">Done!</a>'
                    :  ' <a href="edit" role="button">Edit items!</a>'
        %>
      </div>
      <div class="container">
        <p>Number of requests: <span><%- additionalInfo %> </span></p>
      </div>
    </main>

  </body>
  <script src="/javascripts/home.js"></script>
</html>
